<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>로그인</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      color: #333;
    }

    header {
      background-color: #343a40;
      padding: 10px 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    header img {
      width: 150px;
    }

    .nav-menu {
      display: flex;
      gap: 15px;
    }

    .nav-menu a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }

    .nav-menu a:hover {
      color: #17a2b8;
    }

    main {
      background-color: #fff;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      margin: 100px auto;
    }

    .social-login {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }

    .social-login a {
      display: inline-block;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      text-decoration: none;
      color: #fff;
    }

    .naver-login {
      background-color: #03c75a;
    }

    .naver-login:hover {
      background-color: #029d4f;
    }

    .kakao-login {
      background-color: #FEE500;
      color: #000;
    }

    .kakao-login:hover {
      background-color: #FFD700;
    }
  </style>
</head>
<body>
  <header class="d-flex justify-content-between align-items-center">
    <a href="/">
      <img src="/img/Logo.png" alt="로고">
    </a>
    <nav class="nav-menu">
      <a href="/about">사이트 소개</a>
      <a href="/board">게시판</a>
      <a href="/signup" class="btn btn-outline-light btn-sm">회원가입</a>
    </nav>
  </header>

  <main>
    <h1 class="text-center mb-4">로그인</h1>
    <form action="/login" method="POST" id="login-form">
      <div class="form-group">
        <label for="user_id">아이디:</label>
        <input type="text" class="form-control" id="user_id" name="user_id" required>
      </div>
      <div class="form-group">
        <label for="password">비밀번호:</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary btn-block">로그인</button>
    </form>
    <p class="text-center mt-3">계정이 없으신가요? <a href="/signup">회원가입</a></p>

    <div class="social-login">
      <a id="naver-login-btn" href="/auth/naver" class="naver-login">
        네이버 로그인
      </a>
      <a id="kakao-login-btn" href="/auth/kakao" class="kakao-login">
        카카오 로그인
      </a>
    </div>
  </main>

  <script>
    // 로그인 폼 제출 이벤트
    document.getElementById('login-form').addEventListener('submit', (e) => {
      const userId = document.getElementById('user_id').value;
      const password = document.getElementById('password').value;

      if (!userId || !password) {
        e.preventDefault(); // 폼 제출 방지
        alert('아이디와 비밀번호를 입력해주세요.');
      }
    });

    // 네이버 로그인 버튼 클릭 이벤트
    document.getElementById('naver-login-btn').addEventListener('click', (e) => {
      alert('네이버 로그인 페이지로 이동합니다.');
    });

    // 카카오 로그인 버튼 클릭 이벤트
    document.getElementById('kakao-login-btn').addEventListener('click', (e) => {
      alert('카카오 로그인 페이지로 이동합니다.');
    });
  </script>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
