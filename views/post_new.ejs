<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #eef2f7;
      color: #333;
      margin: 0;
      padding: 0;
    }
    .container {
      width: 90%;
      max-width: 1000px; /* 더 넓게 설정 */
      background: #ffffff;
      padding: 30px;
      margin: 40px auto;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); /* 좀 더 깊은 그림자 */
    }
    h1 {
      text-align: center;
      font-size: 2.4rem; /* 제목 크기 증가 */
      color: #444;
      margin-bottom: 25px;
      border-bottom: 2px solid #ddd;
      padding-bottom: 10px;
    }
    label {
      display: block;
      margin: 20px 0 10px;
      font-weight: bold;
      color: #555;
      font-size: 1.1rem;
    }
    input[type="text"], input[type="file"], select {
      width: 100%;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1.1rem;
      margin-bottom: 20px;
    }
    #editor-container {
      height: 500px; /* 에디터 크기 증가 */
      border: 1px solid #ddd;
      border-radius: 8px;
      background: #fff;
      margin-bottom: 20px;
    }
    textarea {
      display: none;
    }
    #preview {
      border: 1px solid #ddd;
      padding: 15px;
      border-radius: 8px;
      background: #fafafa;
      margin-top: 30px;
    }
    button[type="submit"] {
      margin-top: 20px;
      padding: 15px 25px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1.2rem;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }
    button[type="submit"]:hover {
      background-color: #0056b3;
    }
    .ql-toolbar {
      border-radius: 8px 8px 0 0;
      background: #f8f9fa;
      border-bottom: 1px solid #ddd;
    }
    .ql-container {
      border-radius: 0 0 8px 8px;
    }
    .char-count {
      text-align: right;
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }
  </style>
  <link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1><%= title %></h1>
    <form action="/board" method="POST" id="postForm" enctype="multipart/form-data">
      <label for="title">제목</label>
      <input type="text" id="title" name="title" required maxlength="100" placeholder="제목을 입력하세요. (최대 100자)">

      <label for="tags">태그</label>
      <input type="text" id="tags" name="tags" placeholder="태그를 쉼표(,)로 구분해주세요.">

      <label for="category">카테고리</label>
      <select id="category" name="category">
        <option value="일상">일상</option>
        <option value="공지">공지</option>
        <option value="질문">질문</option>
      </select>

      <label for="content">내용</label>
      <div id="editor-container"></div>
      <textarea id="content" name="content"></textarea>

      <div class="char-count" id="charCount">글자 수: 0 / 2000</div> <!-- 글자 수 표시 -->

      <label for="file">파일 업로드</label>
      <input type="file" id="file" name="file" accept="image/*,application/pdf">

      <button type="submit">작성하기</button>
    </form>
  </div>

  <script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
  <script>
    const quill = new Quill('#editor-container', {
      theme: 'snow',
      placeholder: '내용을 입력하세요...',
      modules: {
        toolbar: [
          [{ header: [1, 2, 3, false] }], // 제목 크기
          [{ font: [] }], // 글꼴 변경
          [{ size: ['small', false, 'large', 'huge'] }], // 글자 크기 조절
          ['bold', 'italic', 'underline', 'strike'], // 기본 텍스트 스타일
          [{ align: [] }], // 정렬
          [{ list: 'ordered' }, { list: 'bullet' }, { indent: '-1' }, { indent: '+1' }], // 리스트 및 들여쓰기
          [{ color: [] }, { background: [] }], // 글자 색상 및 배경색
          ['link', 'image'], // 링크와 이미지 삽입
          ['clean'], // 초기화
        ],
      },
    });

    const form = document.querySelector('#postForm');
    const contentInput = document.querySelector('#content');
    const charCount = document.querySelector('#charCount');

    quill.on('text-change', function () {
      const textLength = quill.getText().trim().length;
      charCount.textContent = `글자 수: ${textLength} / 2000`;

      // 글자 제한 초과 시 경고
      if (textLength > 2000) {
        alert('최대 2000자까지 작성 가능합니다.');
        quill.deleteText(2000, textLength);
      }
    });

    form.onsubmit = function () {
      contentInput.value = quill.root.innerHTML.trim();
      if (!contentInput.value) {
        alert('내용을 입력해주세요!');
        return false;
      }
    };
  </script>
</body>
</html>
